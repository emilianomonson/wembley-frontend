---
// 1. Atrapamos el ID que el cliente puso en la URL (ej: /producto/10 -> id = 10)
const { id } = Astro.params;

// 2. Le pedimos a Spring Boot TODOS los productos
const response = await fetch('https://wembley-backend.onrender.com/api/productos');
const productos = await response.json();

// 3. Buscamos exactamente el botÃ­n que coincide con el ID de la URL
const producto = productos.find(p => p.id.toString() === id);

// 4. SEGURIDAD: Si alguien inventa un ID que no existe, lo redirigimos al catÃ¡logo
if (!producto) {
  return Astro.redirect('/catalogo');
}
