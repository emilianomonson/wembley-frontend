---
const response = await fetch('https://wembley-backend.onrender.com/api/productos');
const productos = await response.json();
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/logo-wembley.png" />
    <meta name="viewport" content="width=device-width" />
    <title>Cat√°logo Completo | Wembley Utiler√≠a</title>
  </head>
  <body class="bg-brand-dark font-sans antialiased text-gray-100 selection:bg-brand-cyan selection:text-brand-dark">

    <nav class="backdrop-blur-md bg-brand-dark/90 border-b border-brand-cyan/20 text-white py-3 px-4 md:px-8 sticky top-0 z-50">
      <div class="flex justify-between items-center w-full">
        <a href="/" class="flex items-center gap-2 md:gap-3 group">
          <img src="/logo-wembley.png" alt="Logo Wembley" class="h-8 md:h-10 w-auto rounded opacity-90 group-hover:opacity-100 transition-opacity" />
          <span class="text-lg md:text-2xl font-black tracking-widest bg-clip-text text-transparent bg-gradient-to-r from-brand-cyan to-brand-magenta hidden sm:block">WEMBLEY</span>
        </a>

        <div class="hidden md:flex space-x-8 font-bold uppercase tracking-wider text-sm">
          <a href="/" class="hover:text-brand-cyan transition-colors">Inicio</a>
          <a href="/catalogo" class="text-brand-cyan border-b-2 border-brand-magenta pb-1">Cat√°logo</a>
        </div>

        <div class="flex items-center gap-3">
          <a href="/carrito" class="bg-brand-card border border-brand-cyan/40 hover:border-brand-magenta text-white px-3 md:px-5 py-2 md:py-2.5 rounded-lg font-bold transition-all shadow-brand-cyan hover:shadow-brand-magenta flex items-center gap-2 group">
            <span class="text-sm md:text-base">üõí<span class="hidden md:inline"> Mi Carrito</span></span>
            <span class="bg-gradient-to-r from-brand-cyan to-brand-magenta text-brand-dark font-black px-2 py-0.5 rounded-md text-xs contador-carrito">0</span>
          </a>
          <button id="btnMenu" class="md:hidden text-brand-cyan hover:text-brand-magenta focus:outline-none p-1">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
          </button>
        </div>
      </div>

      <div id="menuMobile" class="hidden mt-4 space-y-4 font-bold uppercase tracking-wider text-sm border-t border-white/10 pt-4 pb-2">
        <a href="/" class="block text-white hover:text-brand-cyan pl-2 border-l-4 border-transparent hover:border-brand-cyan transition-colors">Inicio</a>
        <a href="/catalogo" class="block text-brand-cyan pl-2 border-l-4 border-brand-magenta transition-colors">Cat√°logo</a>
      </div>
    </nav>

    <header class="bg-black text-white py-12 md:py-16 px-4 text-center border-b border-brand-cyan/20 relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-b from-brand-magenta/10 to-brand-dark/50 pointer-events-none"></div>
      <h1 class="text-4xl md:text-6xl font-black uppercase tracking-tight mb-4 italic relative z-10">
        Nuestro <span class="text-transparent bg-clip-text bg-gradient-to-r from-brand-cyan to-brand-magenta">Cat√°logo</span>
      </h1>
    </header>

    <div class="max-w-7xl mx-auto px-4 mt-8 flex flex-col md:flex-row gap-4 justify-between items-center">
      <div class="relative w-full md:w-2/5">
        <input type="text" id="buscador" placeholder="Buscar bot√≠n, marca..." class="w-full bg-brand-card border border-white/10 rounded-xl py-3 px-5 text-white placeholder-gray-500 focus:outline-none focus:border-brand-cyan transition-colors">
        <span class="absolute right-4 top-3 text-gray-500">üîç</span>
      </div>

      <select id="filtroCategoria" class="w-full md:w-1/4 bg-brand-card border border-white/10 rounded-xl py-3 px-5 text-white focus:outline-none focus:border-brand-cyan transition-colors cursor-pointer appearance-none">
        <option value="Todas">Todas las categor√≠as</option>
        <option value="Botines F√∫tbol 11">Botines F√∫tbol 11</option>
        <option value="Botines Futsal">Botines Futsal</option>
        <option value="Botines Sint√©tico">Botines Sint√©tico</option>
        <option value="Remeras Manga Corta">Remeras Manga Corta</option>
        <option value="Remeras Manga Larga">Remeras Manga Larga</option>
        <option value="Shorts">Shorts</option>
        <option value="Pantalones Largos">Pantalones Largos</option>
        <option value="Medias Deportivas">Medias Deportivas</option>
        <option value="Accesorios">Accesorios</option>
      </select>

      <select id="filtroTalle" class="w-full md:w-1/4 bg-brand-card border border-white/10 rounded-xl py-3 px-5 text-white focus:outline-none focus:border-brand-cyan transition-colors cursor-pointer appearance-none">
        <option value="Todos">Todos los talles</option>
        <optgroup label="Calzado" class="bg-brand-dark">
          <option value="38">38</option><option value="39">39</option><option value="40">40</option><option value="41">41</option><option value="42">42</option><option value="43">43</option><option value="44">44</option>
        </optgroup>
        <optgroup label="Indumentaria" class="bg-brand-dark">
          <option value="S">S</option><option value="M">M</option><option value="L">L</option><option value="XL">XL</option><option value="XXL">XXL</option>
        </optgroup>
      </select>
    </div>

    <main class="max-w-7xl mx-auto py-8 px-4 min-h-screen">
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8" id="grillaProductos">

        {productos.length === 0 ? (
          <div class="col-span-full text-center py-20 text-gray-500">No hay productos disponibles.</div>
        ) : (
          productos.map((prod) => (
            <div class="tarjeta-producto bg-brand-card rounded-2xl overflow-hidden border border-white/5 hover:border-brand-cyan/50 transition-all duration-300 group flex flex-col hover:-translate-y-1 hover:shadow-brand-cyan"
                 data-nombre={prod.nombre.toLowerCase()}
                 data-marca={prod.marca.toLowerCase()}
                 data-categoria={prod.categoria}
                 data-talle={prod.talle}>

              <div class="h-64 bg-black relative overflow-hidden">
                <span class="absolute top-3 left-3 bg-brand-dark text-brand-cyan border border-brand-cyan/30 text-xs font-bold tracking-wider uppercase px-3 py-1 rounded-sm z-20">
                  {prod.categoria}
                </span>
                <a href={`/producto/${prod.id}`} class="block w-full h-full">
                  <img src={prod.imagenUrl || 'https://images.unsplash.com/photo-1606107557195-0e29a4b5b4aa?q=80&w=800&auto=format&fit=crop'}
                       loading="lazy"
                       decoding="async"
                       alt={prod.nombre}
                       class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500 opacity-90 group-hover:opacity-100" />
                </a>
              </div>

              <div class="p-6 flex flex-col flex-grow relative z-10">
                <p class="text-xs text-brand-magenta font-bold tracking-[0.15em] uppercase mb-1">{prod.marca}</p>
                <h3 class="text-lg font-bold text-white mb-4 line-clamp-2 group-hover:text-brand-cyan transition-colors" title={prod.nombre}>{prod.nombre}</h3>

                <div class="mt-auto pt-4 border-t border-white/5 flex flex-col">
                  <div class="mb-2">
                    <span class="text-[10px] text-gray-400 block mb-0.5 uppercase tracking-wider">Precio de Lista</span>
                    <span class="text-sm font-bold text-white line-through opacity-70">${prod.precio}</span>
                    <span class="text-[11px] text-brand-cyan font-bold ml-2">3 cuotas de ${(prod.precio / 3).toFixed(2)}</span>
                  </div>

                  <div class="flex justify-between items-end">
                    <div>
                      <span class="text-[10px] text-brand-magenta font-bold tracking-wider uppercase block mb-1">Efectivo / Transf. (-25%)</span>
                      <span class="text-2xl font-black text-white">${(prod.precio * 0.75).toFixed(2)}</span>
                    </div>
                    <button class="btn-agregar-rapido bg-brand-dark border border-brand-magenta/50 hover:bg-brand-magenta text-white p-3 rounded-xl transition-all duration-300 shadow-brand-magenta hover:scale-105" title="Agregar r√°pido al carrito" data-producto={JSON.stringify(prod)}>
                      <span class="text-lg">üõí</span>
                    </button>
                  </div>
                </div>
              </div>

            </div>
          ))
        )}

      </div>

      <div id="mensajeVacio" class="hidden text-center py-20 text-gray-400 text-xl">No encontramos ning√∫n producto con esos filtros. üò¢</div>

      <div class="flex justify-center mt-12">
        <button id="btnCargarMas" class="hidden bg-transparent border-2 border-brand-cyan text-brand-cyan hover:bg-brand-cyan hover:text-brand-dark font-bold py-3 px-8 rounded-full transition-all shadow-brand-cyan">
          Cargar m√°s botines üëá
        </button>
      </div>

    </main>
  </body>
</html>

<script>
  // Men√∫ Mobile
  const btnMenu = document.getElementById('btnMenu');
  const menuMobile = document.getElementById('menuMobile');
  if (btnMenu && menuMobile) {
    btnMenu.addEventListener('click', () => {
      menuMobile.classList.toggle('hidden');
      menuMobile.classList.toggle('flex');
    });
  }

  // L√ìGICA DE FILTROS Y PAGINACI√ìN "VER M√ÅS"
  const buscador = document.getElementById('buscador');
  const filtroCategoria = document.getElementById('filtroCategoria');
  const filtroTalle = document.getElementById('filtroTalle');
  const tarjetas = document.querySelectorAll('.tarjeta-producto');
  const mensajeVacio = document.getElementById('mensajeVacio');
  const btnCargarMas = document.getElementById('btnCargarMas');

  const ITEMS_POR_PAGINA = 12; // Muestra de a 12 botines
  let itemsMostrados = ITEMS_POR_PAGINA;

  function aplicarFiltros() {
    const texto = buscador.value.toLowerCase();
    const categoriaSeleccionada = filtroCategoria.value;
    const talleSeleccionado = filtroTalle.value;

    let coincidencias = [];

    // Primero evaluamos qui√©nes cumplen los filtros
    tarjetas.forEach(tarjeta => {
      const nombre = tarjeta.getAttribute('data-nombre') || '';
      const marca = tarjeta.getAttribute('data-marca') || '';
      const categoria = tarjeta.getAttribute('data-categoria') || '';
      const talle = tarjeta.getAttribute('data-talle') || '';

      const coincideTexto = nombre.includes(texto) || marca.includes(texto);
      const coincideCategoria = categoriaSeleccionada === 'Todas' || categoria === categoriaSeleccionada;
      const coincideTalle = talleSeleccionado === 'Todos' || talle === talleSeleccionado;

      if (coincideTexto && coincideCategoria && coincideTalle) {
        coincidencias.push(tarjeta);
      } else {
        tarjeta.style.display = 'none'; // Ocultamos los que no coinciden
      }
    });

    // Luego mostramos solo hasta el l√≠mite de la paginaci√≥n
    coincidencias.forEach((tarjeta, index) => {
      if (index < itemsMostrados) {
        tarjeta.style.display = 'flex';
      } else {
        tarjeta.style.display = 'none';
      }
    });

    // Controlamos el bot√≥n "Cargar m√°s" y el mensaje vac√≠o
    if (coincidencias.length === 0) {
      mensajeVacio.style.display = 'block';
      if(btnCargarMas) btnCargarMas.style.display = 'none';
    } else {
      mensajeVacio.style.display = 'none';
      if (btnCargarMas) {
        if (itemsMostrados < coincidencias.length) {
          btnCargarMas.style.display = 'inline-block';
        } else {
          btnCargarMas.style.display = 'none';
        }
      }
    }
  }

  // Si tocamos el bot√≥n, sumamos 12 m√°s a la cuenta
  if (btnCargarMas) {
    btnCargarMas.addEventListener('click', () => {
      itemsMostrados += ITEMS_POR_PAGINA;
      aplicarFiltros();
    });
  }

  // Si el usuario busca o filtra, volvemos a empezar desde 12
  function resetearPaginacion() {
    itemsMostrados = ITEMS_POR_PAGINA;
    aplicarFiltros();
  }

  buscador.addEventListener('input', resetearPaginacion);
  filtroCategoria.addEventListener('change', resetearPaginacion);
  filtroTalle.addEventListener('change', resetearPaginacion);

  // Ejecutamos la primera vez para que solo muestre 12 al entrar
  aplicarFiltros();


  // Contador Carrito
  function actualizarContador() {
    const carrito = JSON.parse(localStorage.getItem('carrito_wembley')) || [];
    const contadores = document.querySelectorAll('.contador-carrito');
    contadores.forEach(c => c.innerText = carrito.length);
  }
  actualizarContador();

  // Agregar R√°pido
  const botonesAgregar = document.querySelectorAll('.btn-agregar-rapido');
  botonesAgregar.forEach(boton => {
    boton.addEventListener('click', () => {
      const producto = JSON.parse(boton.getAttribute('data-producto'));
      let carrito = JSON.parse(localStorage.getItem('carrito_wembley')) || [];
      carrito.push(producto);
      localStorage.setItem('carrito_wembley', JSON.stringify(carrito));
      actualizarContador();
      alert(`¬°${producto.nombre} agregado al carrito! ‚öΩ`);
    });
  });
</script>