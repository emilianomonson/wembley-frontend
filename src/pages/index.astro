---
// Llamamos a tu backend Spring Boot
const response = await fetch('https://wembley-backend.onrender.com/api/productos');
const productos = await response.json();

// Mostramos solo los 칰ltimos 4 ingresos
const ultimosIngresos = productos.slice(-4).reverse();
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Wembley Utiler칤a | Tienda Oficial</title>
  </head>
  <body class="bg-brand-dark font-sans antialiased text-gray-100 selection:bg-brand-cyan selection:text-brand-dark">

    <nav class="backdrop-blur-md bg-brand-dark/90 border-b border-brand-cyan/20 text-white py-3 px-4 md:px-8 sticky top-0 z-50">
      <div class="flex justify-between items-center w-full">
        <a href="/" class="flex items-center gap-2 md:gap-3 group">
          <img src="/logo-wembley.png" alt="Logo Wembley" class="h-8 md:h-10 w-auto rounded opacity-90 group-hover:opacity-100 transition-opacity" />
          <span class="text-lg md:text-2xl font-black tracking-widest bg-clip-text text-transparent bg-gradient-to-r from-brand-cyan to-brand-magenta hidden sm:block">WEMBLEY</span>
        </a>

        <div class="hidden md:flex space-x-8 font-bold uppercase tracking-wider text-sm">
          <a href="/" class="text-brand-cyan border-b-2 border-brand-magenta pb-1">Inicio</a>
          <a href="/catalogo" class="hover:text-brand-cyan transition-colors">Cat치logo</a>
        </div>

        <div class="flex items-center gap-3">
          <a href="/carrito" class="bg-brand-card border border-brand-cyan/40 hover:border-brand-magenta text-white px-3 md:px-5 py-2 md:py-2.5 rounded-lg font-bold transition-all shadow-brand-cyan hover:shadow-brand-magenta flex items-center gap-2 group">
            <span class="text-sm md:text-base">游<span class="hidden md:inline"> Mi Carrito</span></span>
            <span class="bg-gradient-to-r from-brand-cyan to-brand-magenta text-brand-dark font-black px-2 py-0.5 rounded-md text-xs contador-carrito">0</span>
          </a>
          <button id="btnMenu" class="md:hidden text-brand-cyan hover:text-brand-magenta focus:outline-none p-1">
            <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path></svg>
          </button>
        </div>
      </div>

      <div id="menuMobile" class="hidden mt-4 space-y-4 font-bold uppercase tracking-wider text-sm border-t border-white/10 pt-4 pb-2">
        <a href="/" class="block text-brand-cyan pl-2 border-l-4 border-brand-magenta transition-colors">Inicio</a>
        <a href="/catalogo" class="block text-white hover:text-brand-cyan pl-2 border-l-4 border-transparent hover:border-brand-cyan transition-colors">Cat치logo</a>
      </div>
    </nav>

    <header class="relative bg-black h-[80vh] flex items-center justify-center overflow-hidden border-b border-brand-cyan/20">
      <div class="absolute inset-0 bg-cover bg-center opacity-40" style="background-image: url('/fondo-estadio.jpg');"></div>
      <div class="absolute inset-0 bg-gradient-to-t from-brand-dark to-transparent"></div>

      <div class="relative z-10 text-center px-4">
        <h1 class="text-5xl md:text-7xl font-black text-white mb-4 uppercase tracking-tight italic">
          El juego <span class="text-transparent bg-clip-text bg-gradient-to-r from-brand-cyan to-brand-magenta pr-2 py-1">empieza aqu칤</span>
        </h1>
        <p class="text-xl md:text-2xl text-gray-300 mb-8 max-w-2xl mx-auto">
          Encuentra los mejores botines y equipamiento profesional para rendir al m치ximo en la cancha.
        </p>
        <a href="/catalogo" class="inline-block bg-brand-card border border-brand-cyan hover:border-brand-magenta text-white text-lg font-bold py-4 px-10 rounded-full shadow-brand-cyan hover:shadow-brand-magenta transition-all transform hover:scale-105">
          Ver Cat치logo
        </a>
      </div>
    </header>

    <main class="max-w-7xl mx-auto py-16 px-4 min-h-screen">
      <div class="flex justify-between items-end mb-10 border-b border-white/10 pb-4">
        <h2 class="text-3xl md:text-4xl font-bold text-white">칔ltimos Ingresos</h2>
        <a href="/catalogo" class="text-brand-cyan font-semibold hover:text-brand-magenta transition-colors">Ver todo &rarr;</a>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8">
        {ultimosIngresos.length === 0 ? (
          <div class="col-span-full text-center py-10 text-gray-500">No hay productos cargados todav칤a.</div>
        ) : (
          ultimosIngresos.map((prod) => (
            <div class="tarjeta-producto bg-brand-card rounded-2xl overflow-hidden border border-white/5 hover:border-brand-cyan/50 transition-all duration-300 group flex flex-col hover:-translate-y-1 hover:shadow-brand-cyan">

              <div class="h-64 bg-black relative overflow-hidden">
                <span class="absolute top-3 left-3 bg-brand-dark text-brand-cyan border border-brand-cyan/30 text-xs font-bold tracking-wider uppercase px-3 py-1 rounded-sm z-20">
                  {prod.categoria}
                </span>
                <a href={`/producto/${prod.id}`} class="block w-full h-full">
                  <img src={prod.imagenUrl || 'https://images.unsplash.com/photo-1606107557195-0e29a4b5b4aa?q=80&w=800&auto=format&fit=crop'} alt={prod.nombre} class="w-full h-full object-cover transform group-hover:scale-105 transition-transform duration-500 opacity-90 group-hover:opacity-100" />
                </a>
              </div>

              <div class="p-6 flex flex-col flex-grow relative z-10">
                <p class="text-xs text-brand-magenta font-bold tracking-[0.15em] uppercase mb-1">{prod.marca}</p>
                <h3 class="text-lg font-bold text-white mb-4 line-clamp-2 group-hover:text-brand-cyan transition-colors" title={prod.nombre}>{prod.nombre}</h3>

                <div class="mt-auto pt-4 border-t border-white/5 flex flex-col">
                  <div class="mb-2">
                    <span class="text-[10px] text-gray-400 block mb-0.5 uppercase tracking-wider">Precio de Lista</span>
                    <span class="text-sm font-bold text-white line-through opacity-70">${prod.precio}</span>
                    <span class="text-[11px] text-brand-cyan font-bold ml-2">3 cuotas de ${(prod.precio / 3).toFixed(2)}</span>
                  </div>

                  <div class="flex justify-between items-end">
                    <div>
                      <span class="text-[10px] text-brand-magenta font-bold tracking-wider uppercase block mb-1">Efectivo / Transf. (-15%)</span>
                      <span class="text-2xl font-black text-white">${(prod.precio * 0.85).toFixed(2)}</span>
                    </div>
                    <button class="btn-agregar-rapido bg-brand-dark border border-brand-magenta/50 hover:bg-brand-magenta text-white p-3 rounded-xl transition-all duration-300 shadow-brand-magenta hover:scale-105" title="Agregar r치pido al carrito" data-producto={JSON.stringify(prod)}>
                      <span class="text-lg">游</span>
                    </button>
                  </div>
                </div>
              </div>

            </div>
          ))
        )}
      </div>
    </main>
  </body>
</html>

<script>
  // Men칰 Mobile
  const btnMenu = document.getElementById('btnMenu');
  const menuMobile = document.getElementById('menuMobile');
  if (btnMenu && menuMobile) {
    btnMenu.addEventListener('click', () => {
      menuMobile.classList.toggle('hidden');
      menuMobile.classList.toggle('flex');
    });
  }

  // Contador Carrito
  function actualizarContador() {
    const carrito = JSON.parse(localStorage.getItem('carrito_wembley')) || [];
    const contadores = document.querySelectorAll('.contador-carrito');
    contadores.forEach(c => c.innerText = carrito.length);
  }
  actualizarContador();

  // Agregar R치pido
  const botonesAgregar = document.querySelectorAll('.btn-agregar-rapido');
  botonesAgregar.forEach(boton => {
    boton.addEventListener('click', () => {
      const producto = JSON.parse(boton.getAttribute('data-producto'));
      let carrito = JSON.parse(localStorage.getItem('carrito_wembley')) || [];
      carrito.push(producto);
      localStorage.setItem('carrito_wembley', JSON.stringify(carrito));
      actualizarContador();
      alert(`춰${producto.nombre} agregado al carrito! 丘`);
    });
  });
</script>